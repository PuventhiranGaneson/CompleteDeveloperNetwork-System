@page
@model CompleteDeveloperNetwork_System.Pages.HelloModel
@{
    ViewData["Title"] = "Create Developer";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding-top: 50px;
    }

    .form-card {
        max-width: 600px;
        margin: auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.2);
        animation: fadeIn 0.6s ease-in-out;
    }

    .form-title {
        text-align: center;
        margin-bottom: 25px;
        color: #2c3e50;
        font-weight: bold;
    }

    .btn-custom {
        background: #2c3e50;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background: #1a242f;
            transform: scale(1.05);
        }

    @keyframes fadeIn {
        flow
    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="form-card">
    <h2 class="form-title">Create Developer</h2>

    <form method="post" onsubmit="return createDev(event)">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" id="username" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" id="email" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input class="form-control" id="phone" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Skillsets <small class="text-muted">(comma separated)</small></label>
            <input class="form-control" id="skillsets" placeholder="C#, SQL, React" />
        </div>

        <div class="mb-3">
            <label class="form-label">Hobbies <small class="text-muted">(comma separated)</small></label>
            <input class="form-control" id="hobbies" placeholder="Cycling, Gaming" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-custom btn-lg">Save Developer</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        async function createDev(e) {
            e.preventDefault();
            const dev = {
                username: document.getElementById("username").value,
                email: document.getElementById("email").value,
                phoneNumber: document.getElementById("phone").value,
                skillsets: document.getElementById("skillsets").value.split(",").map(s => ({ name: s.trim(), description: "" })),
                hobbies: document.getElementById("hobbies").value.split(",").map(h => ({ name: h.trim(), description: "" }))
            };
            await fetch('/api/developer', {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(dev)
            });
            location.href = "/Developers";
        }
    </script>
}
